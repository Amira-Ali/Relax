<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.timePicker">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/logo"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/ic_baseline_access_alarms_24" />

    <EditText
        android:id="@+id/Time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/pickTimeBtn"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"
        android:autofillHints=""
        android:enabled="false"
        android:inputType=""
        android:paddingHorizontal="20dp"
        android:text="@string/selected_time"
        android:textSize="16sp"
        tools:ignore="LabelFor" />

    <Button
        android:id="@+id/pickTimeBtn"
        style="@style/CustomBtn"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:drawableStart="@drawable/ic_baseline_alarm_add_24"
        android:padding="12dp"
        android:text="@string/open_time_picker" />

    <Button
        android:id="@+id/stopNotificationBtn"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/pickTimeBtn"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        style="@style/CustomBtn"
        android:text="@string/stop_notification"
        android:padding="12dp"
        android:drawableStart="@drawable/ic_baseline_alarm_off_24" />

    <Button
        android:id="@+id/backChatBtn"
        style="@style/CustomBtn"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/stopNotificationBtn"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:drawableStart="@drawable/ic_baseline_keyboard_backspace_24"
        android:padding="12dp"
        android:text="@string/btnBackHome" />

</RelativeLayout>