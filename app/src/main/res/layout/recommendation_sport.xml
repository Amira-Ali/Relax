<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fillViewport="true"
    tools:context=".activities.recommendation_Sport">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/logo"
                android:layout_width="350dp"
                android:layout_height="300dp"
                android:layout_marginHorizontal="15dp"
                android:layout_marginVertical="10dp"
                android:background="@drawable/sport_logo"
                android:layout_gravity="center" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginVertical="10dp"
                android:text="@string/SportIntro"
                android:textSize="14sp"
                android:justificationMode="inter_word" />

            <TextView
                android:id="@+id/SportTips"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginVertical="10dp"
                android:textSize="14sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginVertical="10dp"
                android:text="@string/SportSummary"
                android:textSize="14sp"
                android:justificationMode="inter_word" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="15dp"
                android:text="@string/Stretch"
                android:textSize="16sp"
                android:textStyle="bold" />

            <pl.droidsonroids.gif.GifImageView
                android:layout_width="350dp"
                android:layout_height="265dp"
                android:layout_margin="12dp"
                android:layout_gravity="center"
                android:src="@drawable/sport_stretching1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="15dp"
                android:text="@string/Walking"
                android:textSize="16sp"
                android:textStyle="bold" />

            <pl.droidsonroids.gif.GifImageView
                android:layout_width="350dp"
                android:layout_height="265dp"
                android:layout_margin="12dp"
                android:layout_gravity="center"
                android:background="@drawable/sport_walking" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="15dp"
                android:text="@string/Jogging"
                android:textSize="16sp"
                android:textStyle="bold" />

            <pl.droidsonroids.gif.GifImageView
                android:layout_width="350dp"
                android:layout_height="265dp"
                android:layout_margin="12dp"
                android:layout_gravity="center"
                android:background="@drawable/sport_jogging" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="15dp"
                android:text="@string/Running"
                android:textSize="16sp"
                android:textStyle="bold" />

            <pl.droidsonroids.gif.GifImageView
                android:layout_width="350dp"
                android:layout_height="265dp"
                android:layout_margin="12dp"
                android:layout_gravity="center"
                android:background="@drawable/sport_running" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="15dp"
                android:text="@string/Climb"
                android:textSize="16sp"
                android:textStyle="bold" />

            <pl.droidsonroids.gif.GifImageView
                android:layout_width="350dp"
                android:layout_height="265dp"
                android:layout_margin="12dp"
                android:layout_gravity="center"
                android:background="@drawable/sport_climb" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="15dp"
                android:text="@string/Dance"
                android:textSize="16sp"
                android:textStyle="bold" />

            <pl.droidsonroids.gif.GifImageView
                android:layout_width="200dp"
                android:layout_height="265dp"
                android:layout_margin="12dp"
                android:layout_gravity="center"
                android:background="@drawable/sport_dance" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="15dp"
                android:text="@string/Gardening"
                android:textSize="16sp"
                android:textStyle="bold" />

            <pl.droidsonroids.gif.GifImageView
                android:layout_width="350dp"
                android:layout_height="280dp"
                android:layout_margin="12dp"
                android:layout_gravity="center"
                android:background="@drawable/sport_gardening" />

            <Button
                android:id="@+id/btn_home"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginVertical="20dp"
                android:padding="12dp"
                style="@style/CustomBtn"
                android:drawableStart="@drawable/ic_baseline_keyboard_backspace_24"
                android:text="@string/btnBackHome" />

        </LinearLayout>
    </ScrollView>